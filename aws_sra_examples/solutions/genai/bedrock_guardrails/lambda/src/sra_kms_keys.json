{
  "sra-bedrock-guardrails-key": {
    "Version": "2012-10-17",
    "Id": "sra-bedrock-guardrails-key",
    "Statement": [
      {
        "Sid": "Enable IAM User Permissions",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::ACCOUNT_ID:root"
        },
        "Action": "kms:*",
        "Resource": "*"
      },
      {
        "Sid": "Allow IAM Role Full Access",
        "Effect": "Allow",
        "Principal": {
            "AWS": "arn:aws:iam::ACCOUNT_ID:role/ROLE_NAME"
        },
        "Action": [
            "kms:*"
        ],
        "Resource": "*"
    }
    ]
  }
}